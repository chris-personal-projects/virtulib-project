            Width="65" 
            Height="60"
            Foreground="#FF326E0F"
            Margin="939,193,196,547" MouseLeftButtonDown="RenewBook1" Cursor="Hand"
                    />

        <TextBlock Name="Book1Renew" HorizontalAlignment="Left" Height="32" Margin="929,258,0,0" TextWrapping="Wrap" Text="Renew" VerticalAlignment="Top" Width="75" FontSize="22" FontWeight="Bold" Foreground="#FF326E0F"/>
