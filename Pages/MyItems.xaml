        <fa:ImageAwesome
            Name="Return1"
            Cursor="Hand"
            VerticalAlignment="Center" 
            HorizontalAlignment="Center" 
            Width="63" 
            Height="60"
            Foreground="#FF916D21"
            Margin="1060,193,77,547" Icon="Send" MouseLeftButtonDown="return1Event"
                    />
        <TextBlock Name="Book1Return" HorizontalAlignment="Left" Height="40" Margin="1060,258,0,0" TextWrapping="Wrap" Text="Return" VerticalAlignment="Top" Width="74" FontSize="22" FontWeight="Bold" Foreground="#FF916D21"/>
